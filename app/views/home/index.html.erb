<main>

  <!-- saerchバー　-->
  <div class="slider-area ">
    <div class="slider-active">
      <div class="single-slider slider-height d-flex align-items-center mainpic">
        <div class="container">
          <div class="row">
            <div class="col-xl-6 col-lg-9 col-md-10">
              <div class="hero__caption">
                <h1>Find the most exciting startup jobs</h1>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xl-8">
              <%= search_form_for @ransack_jobs, as: :jobs_search, url: jobs_path do |f| %>
              <%= f.search_field :description_cont, placeholder: 'Find a Job' ,class:"input1"%>
              <%=f.search_field :address_cont, placeholder: 'place' ,class:"input1"%>
              <%= f.submit class:"btn btn-primary input1"%>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="online-cv cv-bg section-overly pt-90 pb-120 cv">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-xl-10">
          <div class="cv-caption text-center">
            <p class="pera1">FEATURED TOURS Packages</p>
            <p class="pera2"> Make a Difference with Your Online Resume!</p>
            <p class="border-btn2 border-btn4">Upload your cv</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!--最新の求人票 -->
  <section class="featured-job-area feature-padding">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="section-tittle text-center">
            <h2>Recent Jobs</h2>
          </div>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-xl-10">
          <!-- single-job-content -->
          <% @recent_jobs.each do |job| %>
          <div class="single-job-items mb-30">
            <div class="job-items">
              <div class="company-img">
              </div>
              <div class="job-tittle">
                <h4><%=job.title%></h4>
                <ul>
                  <li>Creative Agency</li>
                  <li><i class="fas fa-map-marker-alt"></i><%=job.address%></li>
                  <li><%=job.salary%>yen/month</li>
                </ul>
              </div>
            </div>
            <div class="items-link f-right">
              <%=job.status%>
              <p>
                <span><%= job.created_at.strftime('%Y/%m/%d %H:%M:%S')%></span>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <!-- アプリの使い方-->
  <div class="apply-process-area apply-bg pt-150 pb-150 searchpic">
    <div class="container">
      <!-- Apply Process Caption -->
      <div class="row">
        <div class="col-lg-4 col-md-6">
          <div class="single-process text-center mb-30">
            <div class="process-ion">
              <span class="flaticon-search"></span>
            </div>
            <div class="process-cap">
              <h5>1. Search a job</h5>
              <p>You can seach a job two ways. Tag search and key word serach</p>
            </div>
          </div>
        </div>
        <div class="col-lg-4 col-md-6">
          <div class="single-process text-center mb-30">
            <div class="process-ion">
              <span class="flaticon-curriculum-vitae"></span>
            </div>
            <div class="process-cap">
              <h5>2. Apply for job</h5>
              <p>If you find the job that interested in, please click apply button</p>
            </div>
          </div>
        </div>
        <div class="col-lg-4 col-md-6">
          <div class="single-process text-center mb-30">
            <div class="process-ion">
              <span class="flaticon-tour"></span>
            </div>
            <div class="process-cap">
              <h5>3. Get your job</h5>
              <p>Chat with recruiter and get your best job</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


</main>